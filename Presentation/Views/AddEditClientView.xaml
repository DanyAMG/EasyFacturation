<UserControl x:Class="EasyFacturation.Presentation.Views.AddEditClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasyFacturation.Presentation.Views">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titre de la page et message d'erreur -->
            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="Add a new client" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
            </StackPanel>

            <!-- Formulaire -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Width="300" >
                <!-- Title -->
                <TextBlock Text="Title"/>
                <ComboBox SelectedItem="{Binding Title}" ItemsSource="{Binding TitleValues}" Margin="0,0,0,10"/>

                <!-- First Name -->
                <TextBlock Text="First Name"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Last Name -->
                <TextBlock Text="Last Name"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Company Name -->
                <TextBlock Text="Company Name"/>
                <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Street Number -->
                <TextBlock Text="Street Number"/>
                <TextBox Text="{Binding StreetNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Street Name -->
                <TextBlock Text="Street Name"/>
                <TextBox Text="{Binding StreetName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Address Line 1 -->
                <TextBlock Text="Address Line 1"/>
                <TextBox Text="{Binding AdressLine1, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Address Line 2 -->
                <TextBlock Text="Address Line 2"/>
                <TextBox Text="{Binding AdressLine2, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- City -->
                <TextBlock Text="City"/>
                <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Zip Code -->
                <TextBlock Text="Zip Code"/>
                <TextBox Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Phone -->
                <TextBlock Text="Phone"/>
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <!-- Email -->
                <TextBlock Text="Email"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="100"
                    Margin="0,0,10,0"/>
                    

                    <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
